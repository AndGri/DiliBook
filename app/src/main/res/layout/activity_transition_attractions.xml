<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="goToRoot"
    tools:context=".AttractionTuf">

    <Button
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btnstyle2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="goBack"
        android:text="❮"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"/>



    <ScrollView
        android:layout_width="478dp"
        android:layout_height="589dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/tufenkyan"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:background="@drawable/tufenkyan"
                android:contentDescription="TODO"
                android:onClick="goTuf" />

            <TextView
                android:id="@+id/textViewT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Старый Дилижан" />

            <ImageButton
                android:id="@+id/mimino"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/tufenkyan"
                android:contentDescription="TODO"
                android:onClick="goMimino" />

            <TextView
                android:id="@+id/textViewM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="памятник героям из фильма Мимино" />

        </LinearLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:contentDescription="TODO"
        android:onClick="goToRoot"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/gohome"
        />

</RelativeLayout>

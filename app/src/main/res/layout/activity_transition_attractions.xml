<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="goToRoot"
    tools:context=".AttractionTuf">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_above="@id/bottomNav"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/tufenkyan"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:background="@drawable/tufenkyan"
                android:contentDescription="TODO"
                android:onClick="goTuf" />

            <TextView
                android:id="@+id/textViewT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Старый Дилижан" />

            <ImageButton
                android:id="@+id/mimino"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/tufenkyan"
                android:contentDescription="TODO"
                android:onClick="goMimino" />

            <TextView
                android:id="@+id/textViewM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="памятник героям из фильма Мимино" />

        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNav"
        android:background="@drawable/btnstyle1"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        app:menu="@menu/menu_bottom_navigation"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"/>

</RelativeLayout>